@page "/login"
@inherits LoginBase;


<style>
    .loginBox
    {
        font-family: 'Open Sans', sans-serif;
        margin: 0 auto 0 auto;
        width: 100%;
        text-align: center;
        margin: 20px 0;
    }

    p
    {
        font-size: 12px;
        text-decoration: none;
        color: #fff;
    }

    h1
    {
        font-size: 1.5em;
        color: #525252;
    }

    .box
    {
        background: white;
        width: 300px;
        border-radius: 6px;
        margin: 0 auto;
        padding: 0 0 10px 0;
        border: #2877e9 4px solid;
    }

    .email
    {
        background: #fff;
        border: #ccc 1px solid;
        border-bottom: #ccc 2px solid;
        padding: 8px;
        width: 250px;
        color: #525252;
        margin-top: 10px;
        font-size: 1em;
        border-radius: 4px;
    }

    .password
    {
        border-radius: 4px;
        background: #ecf0f1;
        border: #ccc 1px solid;
        padding: 8px;
        width: 250px;
        font-size: 1em;
    }
</style>


<div style="min-height: 400px;">
    <div class="loginBox">
        <div class="box">
            <br/>
            <h1>Admin Panel</h1>

            @if(LoginModel != null)
            {
                <EditForm Model="@LoginModel" OnValidSubmit="CheckLogin">
                    <DataAnnotationsValidator/>

                    <InputText type="email" name="email" class="email mb-2" placeholder="Email" @bind-Value="LoginModel.Email" autocomplete="off"/>
                    <ValidationMessage class="mb-3" For="@(() => LoginModel.Email)"/>

                    <InputText type="password" name="password" class="password mb-2" placeholder="Password" @bind-Value="LoginModel.Password" />
                    <ValidationMessage class="mb-3" For="@(() => LoginModel.Password)" />

                    <input type="submit" class="btn-primary" value="Login"/>
                </EditForm>
            }
        </div>
        <div>
            <p style="color: #e52e50">
                <h4>@AlertMessage</h4>
            </p>
        </div>
    </div>
</div>